{
  "compilerOptions": {
    // Completeness
    "skipLibCheck": true,

    // Language and Environment
    "target": "ES2016",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"],

    // Interop Constraints
    "isolatedModules": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,

    // Emit
    "outDir": "./dist",
    "removeComments": true,

    // Module
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "element-ui": ["src/components/ui/index.ts"]
    },

    // Type Checking
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "strict": true,
    "useUnknownInCatchVariables": false
  },
  // Vue(Official)@3.0.0
  "vueCompilerOptions": {
    "target": "auto",
    "plugins": ["@vue-macros/volar/define-options"],
    // https://github.com/vuejs/language-tools/issues/1969
    // https://github.com/vuejs/language-tools/issues/1821
    "experimentalModelPropName": {
      "": {
        "input": true
      },
      "value": {
        "input": { "type": "text" },
        "textarea": true,
        "select": true
      },
      "checked": {
        "ElRadio": true,
        "ElCheckbox": true
      }
    }
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "**/*.md",
    "**/dist"
  ]
}
